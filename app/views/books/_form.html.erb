<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="grid_7">
  <div class="field">
    <%= f.label :title, :class => "form_field" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author, :class => "form_field" %><br />
    <%= f.collection_select :author_ids, @authors, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :year, :class => "form_field" %><br />
    <%= f.number_field :year %>
  </div>

  <div class="field">
    <%= f.label "Rating (1 - 5)", :class => "form_field"%><br />
    <%= f.number_field :rating %>
  </div>
  <div class="field">
    <%= f.label :genre, :class => "form_field" %><br />
    <%= f.text_field :genre %>
  </div>
    <div class="field">
    <%= f.label :person, :class => "form_field" %><br />
    <%= f.collection_select :person_id, @people, :id, :name %>
  </div>
</div>
<div class="grid_8">
  <div class="field">
    <%= f.label :description, :class => "form_field" %><br />
    <%= f.text_area :description, :class => "text" %>
  </div>
    <div class="field">
    <%= f.label :comments,  :class => "form_field" %><br />
    <%= f.text_area :comments, :class => "text lower" %>
  </div>
</div>

  <div class="actions submit">
    <%= f.submit %>
  </div>
    
<% end %>
